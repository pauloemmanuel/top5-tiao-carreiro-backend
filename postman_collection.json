{
  "info": {
    "name": "Top 5 Tião Carreiro API",
    "description": "Coleção de endpoints da API do Top 5 Tião Carreiro & Pardinho",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": {
      "token": "{{auth_token}}"
    }
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{base_url}}/ping"
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"João Silva\",\n  \"email\": \"joao@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
            },
            "url": "{{base_url}}/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@tiaocarreiro.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{base_url}}/auth/login"
          }
        },
        {
          "name": "Get User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": "{{base_url}}/auth/user"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": "{{base_url}}/auth/logout"
          }
        }
      ]
    },
    {
      "name": "Músicas",
      "item": [
        {
          "name": "Top 5 Músicas",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/musicas/top5"
          }
        },
        {
          "name": "Demais Músicas",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/musicas/demais",
              "query": [
                {
                  "key": "per_page",
                  "value": "10",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Listar Todas as Músicas",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/musicas",
              "query": [
                {
                  "key": "per_page",
                  "value": "15",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Detalhes da Música",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/musicas/1"
          }
        },
        {
          "name": "Criar Música",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url_youtube\": \"https://www.youtube.com/watch?v=dQw4w9WgXcQ\"\n}"
            },
            "url": "{{base_url}}/musicas"
          }
        },
        {
          "name": "Atualizar Música",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"Novo Título\",\n  \"visualizacoes\": 999999\n}"
            },
            "url": "{{base_url}}/musicas/1"
          }
        },
        {
          "name": "Deletar Música",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": "{{base_url}}/musicas/1"
          }
        }
      ]
    },
    {
      "name": "Sugestões",
      "item": [
        {
          "name": "Enviar Sugestão",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url_youtube\": \"https://www.youtube.com/watch?v=exemplo\"\n}"
            },
            "url": "{{base_url}}/sugestoes"
          }
        },
        {
          "name": "Listar Sugestões",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/sugestoes",
              "query": [
                {
                  "key": "status",
                  "value": "pendente",
                  "disabled": true
                },
                {
                  "key": "per_page",
                  "value": "15",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Detalhes da Sugestão",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": "{{base_url}}/sugestoes/1"
          }
        },
        {
          "name": "Aprovar Sugestão",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"observacoes\": \"Música excelente, aprovada!\"\n}"
            },
            "url": "{{base_url}}/sugestoes/1/aprovar"
          }
        },
        {
          "name": "Rejeitar Sugestão",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"observacoes\": \"Não se encaixa no perfil da aplicação\"\n}"
            },
            "url": "{{base_url}}/sugestoes/1/rejeitar"
          }
        },
        {
          "name": "Deletar Sugestão",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": "{{base_url}}/sugestoes/1"
          }
        }
      ]
    }
  ]
}